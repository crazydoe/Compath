<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michal.compath">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

    <meta-data android:name="AA_DB_NAME" android:value="compathdatabase.db" />
    <meta-data android:name="AA_DB_VERSION" android:value="2" />

        <activity android:name=".StartupActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Fragments.MainNaviActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".Fragments.FavoriteFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Fragments.SettingsFragment"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings_activity_fragment" />
        <activity android:name=".Fragments.HistoryFragment"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>